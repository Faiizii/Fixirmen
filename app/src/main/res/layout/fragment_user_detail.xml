<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="com.app.fixirman.view.fragment.UserDetailFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_screen">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:fabSize="mini"
            android:layout_marginStart="4dp"
            app:backgroundTint="@color/white"
            android:onClick="@{(v)->fragment.onClick(v)}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_bgBanner"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/background_profile_gradient"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_userProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_bgBanner"
                    app:layout_constraintBottom_toBottomOf="@id/iv_bgBanner">
                    <ImageView
                        android:id="@+id/iv_userProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    android:layout_marginEnd="16dp"
                    app:fabSize="mini"
                    android:onClick="@{(v)->fragment.onClick(v)}"
                    app:layout_constraintTop_toBottomOf="@id/iv_bgBanner"
                    app:layout_constraintBottom_toBottomOf="@id/iv_bgBanner"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="name here"
                    android:textAlignment="center"
                    android:fontFamily="@font/rokkitt"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    app:layout_constraintTop_toBottomOf="@id/cv_userProfile"/>
                <LinearLayout
                    android:id="@+id/layout_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/tv_userName">
                    <RatingBar
                        android:id="@+id/rb_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.RatingBar.Small"/>
                    <TextView
                        android:id="@+id/tv_starCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:textAlignment="center"
                        android:fontFamily="@font/rokkitt"
                        android:layout_marginStart="8dp"
                        style="@style/TextAppearance.MaterialComponents.Caption"
                        app:layout_constraintTop_toBottomOf="@id/cv_userProfile"/>
                </LinearLayout>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Details"
                    android:textAlignment="center"
                    android:fontFamily="@font/rokkitt"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    app:layout_constraintTop_toBottomOf="@id/layout_rating"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No Phone"
                    android:textAlignment="center"
                    android:fontFamily="@font/rokkitt"
                    android:layout_marginStart="8dp"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    app:layout_constraintTop_toBottomOf="@id/tv"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No email"
                    android:textAlignment="center"
                    android:fontFamily="@font/rokkitt"
                    android:layout_marginStart="8dp"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    app:layout_constraintTop_toBottomOf="@id/tv_phone"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_cnic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No CNIC"
                    android:textAlignment="center"
                    android:fontFamily="@font/rokkitt"
                    android:layout_marginStart="8dp"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    app:layout_constraintTop_toBottomOf="@id/tv_email"/>

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Manage Addresses"
                    android:fontFamily="@font/rokkitt"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_cnic"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_addAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_action_add"
                    app:iconGravity="textEnd"
                    android:minHeight="0dp"
                    android:padding="0dp"
                    android:onClick="@{(v)->fragment.onClick(v)}"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    app:layout_constraintTop_toTopOf="@id/tv2"
                    app:layout_constraintBottom_toBottomOf="@id/tv2"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_addresses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    tools:listitem="@layout/vh_user_address"
                    app:layout_constraintTop_toBottomOf="@id/tv2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>