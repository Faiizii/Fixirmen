<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.app.fixirman.view.activity.RequestDetailActivity" />
        <variable
            name="model"
            type="com.app.fixirman.model.request.RequestDetail" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    app:fabSize="mini"
                    android:contentDescription="@string/back_button"
                    android:layout_marginStart="4dp"
                    app:backgroundTint="@color/white"
                    android:onClick="@{(v)->activity.onClick(v)}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tv_orderId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/req_num"
                    android:text="@{`REQ# `+model.id}"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/rokkitt"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_back"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/toolBar"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/view_hexagon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:cardCornerRadius="35dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <ImageView
                        android:id="@+id/iv_categoryImage"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@{model.categoryName}"
                        android:layout_gravity="center"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:id="@+id/tv_requestCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:hint="@string/no_name"
                    android:text="@{model.categoryName}"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    app:layout_constraintEnd_toStartOf="@id/tv_requestStatus"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/view_hexagon"/>
                <TextView
                    android:id="@+id/tv_requestStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:hint="@string/searching"
                    android:text="@{model.status}"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_initialCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:hint="@string/rs_hint"
                    android:text="@{`Rs. `+model.initialCost}"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintTop_toBottomOf="@id/tv_requestCategory"
                    app:layout_constraintStart_toStartOf="@id/tv_requestCategory"/>
                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:layout_constraintTop_toBottomOf="@id/view_hexagon"/>
                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:textColorHint="@color/white"
                    android:text="@string/address"
                    android:paddingTop="8dp"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    app:layout_constraintTop_toBottomOf="@id/map"/>
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:text="@{model.address}"
                    android:paddingBottom="8dp"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintTop_toBottomOf="@id/tv4"/>
                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/bg_main"
                    app:layout_constraintTop_toBottomOf="@id/tv_address"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:hint="@string/date"
                    android:text="@{model.date}"
                    android:gravity="center"
                    android:padding="10dp"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    app:layout_constraintTop_toBottomOf="@id/view"
                    app:layout_constraintEnd_toStartOf="@id/view1"
                    app:layout_constraintStart_toStartOf="parent"/>
                <View
                    android:id="@+id/view1"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"
                    android:background="@color/dull_white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_date"
                    app:layout_constraintBottom_toBottomOf="@id/tv_date"/>
                <TextView
                    android:id="@+id/tv_timeSlot"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/rokkitt"
                    android:hint="@string/time"
                    android:text="@{model.timeSlot}"
                    android:gravity="center"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    app:layout_constraintTop_toTopOf="@id/tv_date"
                    app:layout_constraintBottom_toBottomOf="@id/tv_date"
                    app:layout_constraintStart_toEndOf="@id/view1"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/off_white"
                    app:layout_constraintTop_toBottomOf="@id/tv_date"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_worker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/view2">
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/layout_searching"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent">
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:lottie_fileName="loading.json"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rokkitt"
                            android:text="@string/searching_worker"
                            android:textAlignment="center"
                            style="@style/TextAppearance.MaterialComponents.Headline6"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/rv_bidders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:listitem="@layout/vh_bidder"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@id/layout_searching"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:visibility="gone"
                        android:id="@+id/layout_workerDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rv_bidders">
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cv_workerProfile"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="25dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <ImageView
                                android:id="@+id/iv_workerProfileImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@{model.userName}"/>
                        </com.google.android.material.card.MaterialCardView>
                        <TextView
                            android:id="@+id/tv_workerName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rokkitt"
                            android:hint="@string/worker_name"
                            android:text="@{model.providerName}"
                            android:layout_marginStart="8dp"
                            style="@style/TextAppearance.MaterialComponents.Subtitle1"
                            app:layout_constraintTop_toTopOf="@id/cv_workerProfile"
                            app:layout_constraintStart_toEndOf="@id/cv_workerProfile"
                            app:layout_constraintEnd_toEndOf="parent"/>
                        <RatingBar
                            android:id="@+id/rating_worker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rating="@{model.providerRating}"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            app:layout_constraintStart_toStartOf="@id/tv_workerName"
                            app:layout_constraintTop_toBottomOf="@id/tv_workerName"/>
                        <TextView
                            android:id="@+id/tv_workerDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rokkitt"
                            android:hint="@string/no_description"
                            android:text="@{model.providerDescription}"
                            android:layout_marginTop="8dp"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            app:layout_constraintTop_toBottomOf="@id/cv_workerProfile" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tv_call"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rokkitt"
                            android:text="@string/call"
                            android:layout_marginTop="16dp"
                            app:icon="@drawable/ic_phone"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            app:layout_constraintTop_toBottomOf="@id/tv_workerDescription"
                            app:layout_constraintEnd_toStartOf="@id/view4"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <View
                            android:visibility="gone"
                            android:id="@+id/view4"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:layout_margin="2dp"
                            android:background="@color/dull_white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_call"
                            app:layout_constraintBottom_toBottomOf="@id/tv_call"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_message"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:fontFamily="@font/rokkitt"
                            android:text="@string/message"
                            app:icon="@drawable/ic_message"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            app:layout_constraintTop_toTopOf="@id/tv_call"
                            app:layout_constraintBottom_toBottomOf="@id/tv_call"
                            app:layout_constraintStart_toEndOf="@id/view4"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/layout_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/layout_workerDetail">
                        <RatingBar
                            android:id="@+id/rb_review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/il_review"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_review"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:hint="Write your experience"
                                android:fontFamily="@font/rokkitt"
                                android:maxLength="1000"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_submitRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Submit Rating"
                            android:fontFamily="@font/rokkitt"
                            android:onClick="@{(v)->activity.onClick(v)}"/>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/layout_thankYou"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/layout_rating">
                        <TextView
                            android:id="@+id/tv_thankyouMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thank you"
                            android:layout_gravity="center_horizontal"
                            style="@style/TextAppearance.MaterialComponents.Headline3"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/off_white"
                    app:layout_constraintTop_toBottomOf="@id/layout_worker"/>
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:text="@string/request_details"
                    android:layout_marginTop="16dp"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    app:layout_constraintTop_toBottomOf="@id/view3"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:hint="@string/no_description"
                    android:text="@{model.description}"
                    android:layout_marginTop="4dp"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintTop_toBottomOf="@id/tv"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:text="@string/service_requested"
                    android:layout_marginTop="16dp"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    app:layout_constraintTop_toBottomOf="@id/tv_description"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tv_serviceType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:hint="@string/standard"
                    android:text="@{model.serviceTypeName}"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@id/tv1"
                    app:layout_constraintBottom_toBottomOf="@id/tv1"
                    app:layout_constraintStart_toEndOf="@id/tv1"/>
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:text="@string/created_on"
                    android:layout_marginTop="2dp"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    app:layout_constraintTop_toBottomOf="@id/tv1"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tv_createdAt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rokkitt"
                    android:hint="@string/date_time"
                    android:text="@{model.createDate}"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@id/tv2"
                    app:layout_constraintBottom_toBottomOf="@id/tv2"
                    app:layout_constraintStart_toEndOf="@id/tv2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>